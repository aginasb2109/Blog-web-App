<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>A Blog Web app</title>
 
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/index.css">
</head>
<body>
  <%- include("partials/header.ejs") %>



<div class="container btnfam d-flex justify-content-start mb-3">
  <button type="button" class="btn btn-primary btn-lg bt my-4" onclick="window.location.href='/post'" style="background-color: cornflowerblue; border-color: cornflowerblue;">Create a post</button>
</div>


<div class="container my-3">
  <h1 class="top">Top Trending Blogs</h1>

  <% articles.forEach(article => { %>
    <div class="container">
      <div class="card mt-4">
        <div class="card-body">
          <div class="card-title mb-4">
            <h2><%= article.title %></h2>
          </div>
          <div class="card-subtitle mb-3">
            <%= article.date.toLocaleString() %>
          </div>
          <div class="card-text mb-3">
            <p><%= article.description %></p>
          </div>
          <div class="buttons">
            <a href="/show/<%= articles.indexOf(article) %>" class="btn btn-primary main mx-2" style="background-color: cornflowerblue; border-color: cornflowerblue;">View Post</a>
            <a href="/edit/<%= articles.indexOf(article) %>" class="btn btn-secondary main mx-2 px-4">Edit</a>
            <form action="/delete/<%= articles.indexOf(article) %>" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger main mx-2">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>


<%- include("partials/footer.ejs") %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>